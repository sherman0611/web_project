<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/plant_entry.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body onload="init()">
    <%- include('partials/header') %>

    <% if (plant_entry === null) { %>
        <p>Cannot load plant_entry</p>
    <% } else { %>
        <% if(plant_entry.image) { %>
            <% if(plant_entry.image.includes('public')) { %>
                <img class="plant-image" src="<%= plant_entry.image.replace('public', '') %>" alt="<%= plant_entry.plant_name %>">
            <% } else { %>
                <img class="plant-image" src="<%= plant_entry.image %>" alt="<%= plant_entry.plant_name %>">
            <% } %>
        <% } else if(plant_entry.image_url) { %>
            <img class="plant-image" src="<%= plant_entry.image_url %>" alt="<%= plant_entry.plant_name %>">
        <% } %>

        <div class="plant_details">
            <p>Plant submitted by <%= plant_entry.username %></p>
            <p><%= plant_entry.date.substring(0, 10) %>, <%= plant_entry.location %></p>
            <h1><%= plant_entry.plant_name %></h1>
            <% if(plant_entry.date) { %>
                <h2>Submitted by: <%= plant_entry.username %> on <%= plant_entry.date.substring(0, 10) %>
                    <% if(plant_entry.time) { %>
                        at <%= plant_entry.time %>
                    <% } %>
                </h2>
            <% } else { %>
                <h2>Submitted by: <%= plant_entry.username %></h2>
            <% } %>
            <h3>Location: </h3>
            <p><%= plant_entry.location %></p>
            <h3>Description:</h3>
            <p><%= plant_entry.description %></p>
            <h3>Characteristics:</h3>
            <p>Height: <%= plant_entry.height %></p>
            <p>Spread: <%= plant_entry.spread %></p>
            <p>Flowers:</p>
        </div>

        <div id="chat_interface">
            <h2>Comments</h2>
            <% if (comments === null) { %>
                <p>Cannot load comments</p>
            <% } else { %>
                <div id="all_comments">
                    <% comments.forEach(comment => { %>
                        <div class="plant_content">
                            <p><strong><%= comment.username %></strong></p>
                            <p><%= comment.commentText %></p>
                            <p>Sent on <%= comment.date.substring(0, 10) %></p>
                        </div>
                        <hr>
                    <% }); %>
                </div>
            <% } %>
            <div id="input">
                <form id="comment_form" onsubmit="return false;">
                    <input type="hidden" id="plant_id" name="plant_id" value="<%= plant_id %>">
                    <p>
                        <label for="name">Your name: </label>
                        <input type="text" id="username" name="username">
                    </p>
                    <p>
                        <input type="text" id="commentText" name="commentText" placeholder="Enter your reply...">
                        <button id="comment_send" onclick="sendComment()">Send</button>
                    </p>
                </form>
            </div>
        </div>
    <% } %>
    <button id="close_btn" class="form_btn" onclick="returnHome()">Go Back</button>
</body>
</html>
