<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <script src="/javascripts/index.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>

    <a href="/create"><button id="create_btn">Create new plant_entry</button></a>

    <select id="sort_by" onchange="sortBy(this.value)">
      <option value="date">Sort by Date</option>
      <option value="distance">Sort by Distance</option>
    </select>

    <% if (data === null) { %>
      <p>Cannot connect to server</p>
    <% } else if (data.length === 0) { %>
      <p>No plant entries available currently.</p>
    <% } else { %>
      <% data.forEach(plant_entry => { %>
        <a class="plant_link" href="/plant_entry/<%= plant_entry._id %>">
          <img class="plant_image" src="/<%= plant_entry.image %>" alt="<%= plant_entry.plant_name %>" width="200" height="200">
          <div class="plant_content">
            <p><strong><%= plant_entry.plant_name %></strong></p>
            <p>Location: <%= plant_entry.location %></p>
            <p>Date: <%= plant_entry.date %></p>
            <p>User: <%= plant_entry.username %></p>
          </div>
        </a>
        <hr>
      <% }); %>
    <% } %>
  </body>
</html>
